{
	"name": "node-rest-api",
	"version": "1.0.0",
	"scripts": {
		"watch": "tsc -w",
		"build": "tsc",
		"serve": "nodemon -r source-map-support/register -r dotenv/config dist/server.js",
		"serve-production": "NODE_ENV=PRODUCTION node dist/server.js",
		"start": "npm run build && concurrently -c magenta,blue -n watch,serve \"npm run watch\" \"npm run serve\""
	},
	"dependencies": {
		"@typegoose/typegoose": "^7.2.0",
		"body-parser": "^1.20.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"csurf": "^1.11.0",
		"dotenv": "^8.2.0",
		"express": "^4.18.2",
		"express-bearer-token": "^2.4.0",
		"express-mongo-sanitize": "^2.0.0",
		"express-promise-router": "^3.0.3",
		"helmet": "^3.22.0",
		"mongoose": "^5.6.9",
		"xss-clean": "^0.1.1"
	},
	"devDependencies": {
		"@types/express-promise-router": "^3.0.0",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.6",
		"@types/csurf": "^1.9.36",
		"@types/express": "^4.17.3",
		"@types/express-mongo-sanitize": "^1.3.1",
		"@types/helmet": "0.0.45",
		"@types/mongoose": "^5.7.8",
		"@types/node": "^13.13.6",
		"source-map-support": "^0.5.16"
	}
}
